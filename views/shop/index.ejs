<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <div class="container-fluid header__search sticky-top">
        <div class="d-flex justify-content-between">
            
            <div class="logo-div">
                <img src="../images/logo.png" class="logo-image" alt="" srcset="">
            </div>
            <div class="topnav">
                <div class="search-container">
                  <form action="#">
                    <input type="text" placeholder="Search.." name="search">
                    <button type="submit"><i class="fa fa-search"></i></button>
                  </form>
                </div>
            </div>
            <div class="d-flex flex-row-reverse bd-highlight">
                <div class="p-2 bd-highlight">Flex item 1</div>
            </div>
        </div>        
    </div>
    <div class="container-fluid barner-content mt-2">
        <div class="container container-categories">
            <div class="d-flex justify-content-between">
                <div class="d-flex flex-row bd-highlight leftpart_category">
                    <div class="p-2 bd-highlight">
                        <div class="btn-group">
                            <div class="dropdown-toggle all-category" data-bs-toggle="dropdown" aria-expanded="false">
                                My Market
                            </div>
                        </div>
                        <ul>
                            <li><a href="">Men's Clothes</a></li>
                            <li><a href="">Women's Clothes</a></li>
                            <li><a href="">Women Shoes</a></li>
                            <li><a href="">Men's Shoes</a></li>
                            <li><a href="">Watches</a></li>
                            <li><a href="">Computers</a></li>
                            <li><a href="">Others</a> </li>
                        </ul>
                    </div>                
                </div>
                <div class="slide-content">
                    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                        <% if (prods.length > 0) { %>
                           
                        <div class="carousel-inner slideImage_Div">
                            <% for (let product of prods) { %>
                          <div class="carousel-item active" data-bs-interval="10000">
                            <img src="/<%= product.imageUrl %>" class="d-block w-100 slideImage" alt="<%= product.title %>">
                          </div>
                          <div class="carousel-item" data-bs-interval="10000">
                            <img src="/<%= product.imageUrl %>" class="d-block w-100 slideImage" alt="<%= product.title %>">
                          </div>
                          <% } %>
                        </div>
                        
                          <% } %>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Next</span>
                        </button>
                      </div>
                </div>
                <div class="d-flex flex-row-reverse bd-highlight rightpart_category">
                    <div class="p-2 bd-highlight">
                        Populated products
                        <div class="populated-products">Item1</div>
                        <div class="populated-products">Item1</div>
                        <div class="populated-products">Item1</div>
                        <div class="populated-products">Item1</div>
                    </div>
                </div>
            </div> 
        </div>       
    </div>
    <hr>

   <div class="container-fluid">
       <div class="container">
            <main>
                <div class="product-header_content">
                    <h3>Latest Products</h3>
                </div>
                <% if (prods.length > 0) { %>
                    <div class="container">
                            <div class="row">
                                <% for (let product of prods) { %>
                                    <div class="col-md-2" style="padding: 0; margin-bottom: 5px;">
                                        <article class="card product-item">
                                            <div class="card__image">
                                                <a href="/products/<%= product._id %>">
                                                     <img src="/<%= product.imageUrl %>"
                                                    alt="<%= product.title %>">
                                                </a>    
                                            </div>
                                            <div class="card__content">
                                                <header class="card__header">
                                                    <h1 class="product__title"><a href="/products/<%= product._id %>"><%= product.title %></a></h1>
                                                </header>
                                                <h3 class="product__price"><%= product.price %> Rwf</h3>
                                            </div>
                                        </article>
                                    </div>  
                                <% } %>
                            </div>                           
                      
                    </div>
                    <hr>
                    <%- include('../includes/pagination.ejs', {currentPage: currentPage, nextPage: nextPage, previousPage: previousPage, lastPage: lastPage, hasNextPage: hasNextPage, hasPreviousPage: hasPreviousPage}) %>
                <% } else { %>
                    <h1>No Products Found!</h1>
                <% } %>
            </main>
       </div>
   </div>
<%- include('../includes/end.ejs') %>
<%- include('../includes/footer.ejs') %>